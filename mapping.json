{
  "settings": {
    "default_pipeline": "search",
    "number_of_replicas": 0,
    "number_of_shards": 5,
    "similarity": {
      "scripted_tfidf": {
        "type": "scripted",
        "script": {
          "source": "double tf = Math.sqrt(doc.freq); double idf = Math.log((field.docCount+1.0)/(term.docFreq+1.0)) + 1.0; double norm = 1/Math.sqrt(doc.length); return query.boost * tf * idf * norm;"
        }
      }
    },
    "index": {
      "index": "index-persons",
      "type": "persons",
      "analysis": {
        "analyzer": {
          "vi_analyzer": {
            "tokenizer": "vi_tokenizer",
            "char_filter": ["html_strip"],
            "filter": ["icu_folding"]
          },
          "english_analyzer": {
            "tokenizer": "standard",
            "filter": ["lowercase", "en_stemmer", "asciifolding"]
          },
          "ng_analyzer": {
            "type": "custom",
            "tokenizer": "ng_tokenizer",
            "filter": ["lowercase", "asciifolding"]
          },
          "keyword_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": ["lowercase", "asciifolding", "agg_synonyms"]
          },
          "keyword_rev_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": ["lowercase", "asciifolding", "reverse"]
          },
          "search_english_analyzer": {
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "en_stemmer",
              "asciifolding",
              "search_synonyms"
            ]
          },
          "search_keyword_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": ["lowercase", "asciifolding", "agg_synonyms"]
          },
          "terms_analyzer": {
            "type": "custom",
            "tokenizer": "comma_tokenizer",
            "filter": ["lowercase", "asciifolding"]
          }
        },
        "filter": {
          "en_stemmer": {
            "type": "stemmer",
            "name": "light_english"
          },
          "search_synonyms": {
            "type": "synonym",
            "synonyms": [],
            "updateable": true
          },
          "agg_synonyms": {
            "type": "synonym",
            "synonyms": []
          }
        },
        "tokenizer": {
          "ng_tokenizer": {
            "type": "edge_ngram",
            "min_gram": 2,
            "max_gram": 25,
            "token_chars": ["letter", "digit"]
          },
          "comma_tokenizer": {
            "type": "simple_pattern_split",
            "pattern": ","
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "expiredDate": {
        "type": "date"
      },
      "jobTitle": {
        "type": "text",
        "analyzer": "vi_analyzer",
        "similarity": "scripted_tfidf"
      },
      "salaryMax": {
        "type": "long"
      },
      "skills": {
        "properties": {
          "type": "text",
          "analyzer": "vi_analyzer",
          "similarity": "scripted_tfidf"
        }
      },
      "jobLevelVI": { "type": "keyword", "analyzer": "vi_analyzer" },
      "geoLocaltion": {
        "type": "geo_point"
      },
      "salaryMin": {
        "type": "long"
      },
      "locationVIs": {
        "properties": { "type": "text", "analyzer": "vi_analyzer" }
      },
      "onlineDate": {
        "type": "date"
      },
      "jobId": {
        "type": "long"
      },
      "companyId": {
        "type": "long"
      },
      "benefits": {
        "type": "nested",
        "properties": {
          "benefitName": {
            "type": "text"
          },
          "benefitValue": {
            "type": "text"
          }
        }
      },
      "serviceCode": { "type": "text", "max_input_length": 50 },
      "categoryVIs": {
        "properties": { "type": "text", "analyzer": "vi_analyzer" }
      },
      "jobLocations": { "type": "text" },
      "company": { "type": "text" },
      "categories": {
        "properties": { "type": "text" }
      },
      "timestamp": { "type": "date" },
      "companyLogo": { "type": "text" },
      "isHeadhuntJob": { "type": "boolean" },
      "userId": { "type": "long" },
      "jobLevel": { "type": "text" },
      "locations": {
        "properties": { "type": "text" }
      },
      "publishedDate": { "type": "date" },
      "objectID": { "type": "long" }
    }
  }
}
